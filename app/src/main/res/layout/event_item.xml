<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12sp"
    android:layout_marginVertical="8sp"
    android:backgroundTint="@color/white"
    android:background="@drawable/rounded_corner">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tveventtitulo"
        android:text="Titulo nota"
        android:textColor="@color/color"
        android:textSize="18sp"
        android:layout_marginVertical="4sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tveventlugar"
        android:text="Contenido nota"
        android:textSize="17sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginVertical="4sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvdesclugar"
        android:text="Contenido evento"
        android:textSize="17sp"
        android:maxLines="5"
        android:ellipsize="end"
        android:layout_marginVertical="4sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tveventhora"
        android:text="fecha nota"
        android:textSize="12sp"
        android:gravity="right"
        android:layout_marginVertical="4sp" />

</LinearLayout>