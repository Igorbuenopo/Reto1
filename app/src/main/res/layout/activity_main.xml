<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card-view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:background="@drawable/bg_view"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_24sdp"
        android:layout_marginLeft="@dimen/_24sdp"
        app:cardCornerRadius="30sp"
        android:elevation="20sp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/_14sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:id="@+id/login"
                android:textSize="@dimen/_32sdp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/TextImputNombre"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="8sp"
                android:hint="Email"
                android:padding="8sp"
                android:inputType="text"
                android:textColor="@color/color"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="@dimen/_26sdp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/editTextContrasenna"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_pass"
                android:drawablePadding="8sp"
                android:hint="Contraseña"
                android:padding="8sp"
                android:inputType="numberPassword"
                android:textColor="@color/color"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="@dimen/_14sdp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:id="@+id/buttonConfirmar"
                android:text="ACEPTAR"
                android:textSize="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="@color/purple"
                app:cornerRadius="20sp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/preguntaRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="-14sp"
        android:padding="8sp"
        android:text="¿No estás registrado?"
        android:textAlignment="center"
        android:textSize="@dimen/_12sdp" />

    <Button
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_44sdp"
        android:id="@+id/buttonRegistrarse"
        android:text="REGISTRARSE"
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:backgroundTint="@color/purple"
        app:cornerRadius="20sp"
        />

    <Button
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_44sdp"
        android:id="@+id/ButtonPrivado"
        android:text="MODO INVITADO"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:backgroundTint="@color/purple"
        app:cornerRadius="20sp"
        android:drawableLeft="@drawable/ic_person"
        />

</LinearLayout>