<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card-view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:text="SMART EVENTS"
        android:textStyle="bold"
        android:textColor="@color/azulLogo"
        android:textSize="@dimen/_23sdp"
        android:gravity="center"
        android:fontFamily="@font/font1"
        android:drawableLeft="@drawable/logoinvisible"
        android:paddingLeft="@dimen/_28sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_12sdp"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_24sdp"
        android:layout_marginLeft="@dimen/_24sdp"
        app:cardCornerRadius="30sp"
        android:elevation="20sp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/_14sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/registroNom"
                android:id="@+id/login"
                android:textSize="@dimen/_32sdp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/viewUsuario"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="8sp"
                android:hint="@string/TextImputNombre"
                android:padding="8sp"
                android:inputType="text"
                android:textColor="@color/color"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="@dimen/_26sdp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/viewPass"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_pass"
                android:drawablePadding="8sp"
                android:hint="@string/editTextContrasenna"
                android:padding="8sp"
                android:inputType="numberPassword"
                android:textColor="@color/color"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="@dimen/_14sdp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:id="@+id/buttonConfirmarCrear"
                android:text="@string/aceptarRegistro"
                android:textSize="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="@color/purple"
                app:cornerRadius="20sp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <Button
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_44sdp"
        android:id="@+id/ButtonRegistroAtras"
        android:text="@string/atrasbotonCalen"
        android:textSize="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_58sdp"
        android:backgroundTint="@color/azulLogo"
        app:cornerRadius="20sp"
        />

</LinearLayout>